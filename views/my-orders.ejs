                flex-direction: column;
                align-items: flex-start;
            }
            
            .order-total {
                margin-top: 5px;
            }
            
            .order-info {
                width: 100%;
                margin-bottom: 8px;
            }
            
            .footer-column {
                width: 100%;
            }
        }
    </style>
